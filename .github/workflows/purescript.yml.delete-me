name: purescript

on:
  push:
    paths-ignore:
    - 'old/**'
    - '**.md'
  pull_request:
    paths-ignore:
    - 'old/**'
    - '**.md'

jobs:
  test:
    runs-on: ubuntu-18.04
    steps:
    - uses: actions/checkout@v2
    - name: test
      run: |
        yarn install
        yarn run bundle-tests
        yarn run tests

  deploy:
    runs-on: ubuntu-18.04
    needs: test
    if: github.ref == 'refs/heads/release'
    steps:
    - uses: actions/checkout@v2
    - name: bundle
      run: |
        yarn install
        yarn run bundle-app
    - name: gh-pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: dist/app/
        destination_dir: new/

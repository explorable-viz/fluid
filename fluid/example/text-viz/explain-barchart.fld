let likelihoodMap prob = 
    let go (x:xs) = 
        if x.prob < prob
        then x.msg
        else go xs;
        go [] = "not found"
    in go likelihoods;

let findLikelihood (min, max) target = 
    if target > max
    then 0.0
    else if target < min 
    then 1.0
    else (target - min)/(max - min);

let modTable offset table = map (fun bar -> { x: bar.x, bars: [{ y: bar.y, z: bar.z + offset}] }) table;

